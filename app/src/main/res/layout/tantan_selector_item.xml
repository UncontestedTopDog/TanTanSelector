<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/l1"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="440dp"
    android:layout_centerHorizontal="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.example.administrator.tantanselector.RoundImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="345"
            android:scaleType="fitXY"
            android:src="@drawable/one" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="95"
            android:background="@drawable/item_bg"
            android:padding="5dp">

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/left_label"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="20dp"
        android:alpha="0"
        android:src="@drawable/img_like" />

    <ImageView
        android:id="@+id/right_label"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:alpha="0"
        android:src="@drawable/img_dislike" />
    
    <ImageView
        android:id="@+id/very_like"
        android:src="@drawable/img_avatar_01"
        android:scaleType="fitXY"
        android:alpha="0"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:layout_width="match_parent"
        android:layout_height="80dp" />

</RelativeLayout>